<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigationDrawerActvity.ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/edittext_style">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:inputType="text"
            android:singleLine="true"
            android:backgroundTint="@color/white"
             android:hint="@string/Search"
            android:textColorHint="@color/black"
            android:layout_marginRight="@dimen/_40sdp"
            android:paddingLeft="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="315dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_centerVertical="true"
            android:id="@+id/img_search"
            android:layout_toRightOf="@+id/searchView"
            android:src="@drawable/ic_search" />

        </RelativeLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_search">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                >

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_ads"
                    android:layout_width="match_parent"
                    android:layout_height="133dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    app:centered="true"
                    app:fillColor="#df0623"
                    android:visibility="invisible"
                    app:pageColor="@color/light_gray"
                    app:snap="false" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_pager_ads"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/arialmt"
                    android:gravity="center"
                    android:text="@string/Welcometostore"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_viewpager"
                android:layout_margin="@dimen/_3sdp"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/_5sdp" />


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>