<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.ltg.ltgfresh.NavigationDrawerActvity.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_itemDetailFragment"
            app:destination="@id/nav_item_details"
            app:exitAnim="@anim/nav_default_exit_anim"/>

        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/nav_profile"
            app:exitAnim="@anim/nav_default_exit_anim"/>

        <action
            android:id="@+id/action_homeFragment_to_cartViewFragment"
            app:destination="@id/nav_cart_view"
            app:exitAnim="@anim/nav_default_exit_anim"/>

    </fragment>

    <fragment
        android:id="@+id/nav_cart_view"
        android:name="com.ltg.ltgfresh.Fragments.CartViewFragment"
        android:label="@string/cart_view"
        tools:layout="@layout/fragment_cart_view">

        <action
            android:id="@+id/action_cartViewFragment_to_paymentFragment"
            app:destination="@id/nav_payment"
            app:exitAnim="@anim/nav_default_exit_anim"/>

    </fragment>

    <fragment
        android:id="@+id/nav_payment"
        android:name="com.ltg.ltgfresh.Fragments.PaymentFragment"
        android:label="@string/payment"
        tools:layout="@layout/fragment_payment"/>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.ltg.ltgfresh.Fragments.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/nav_item_details"
        android:name="com.ltg.ltgfresh.Fragments.ItemDetailsFragment"
        android:label="@string/item_details"
        tools:layout="@layout/fragment_item_detail">

        <argument
            android:name="product_ID"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.ltg.ltgfresh.NavigationDrawerActvity.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.ltg.ltgfresh.NavigationDrawerActvity.ui.slideshow.SlideshowFragment"
        android:label="@string/my_shop"
        tools:layout="@layout/fragment_slideshow">

        <argument
            android:name="Category_No"
            app:argType="string"
            />

        <action
            android:id="@+id/action_slideshowFragment_to_subCategoryFragment"
            app:destination="@id/nav_sub_category"
            app:exitAnim="@anim/nav_default_exit_anim"/>

    </fragment>


    <fragment
        android:id="@+id/nav_sub_category"
        android:label="@string/my_shop"
        android:name="com.ltg.ltgfresh.Fragments.SubCategoryFragment"
        tools:layout="@layout/fragment_sub_category">

        <action
            android:id="@+id/action_homeFragment_to_itemDetailFragment"
            app:destination="@id/nav_item_details"
            app:exitAnim="@anim/nav_default_exit_anim"/>

    </fragment>


</navigation>